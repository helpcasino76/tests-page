    <script>
        // Données des produits (à personnaliser avec vos vraies données)
        const productsData = [
            {
                id: 8,
                title: "Test du DJI Power 2000",
                image: "https://i.ibb.co/HLMwKSjJ/61-Rl-W-Qhzg-L-AC-UF894-1000-QL80.jpg",
                rating: 8,
                link: "https://conseildirect.fr/test-de-la-jbl-boombox-4"
            },
            {
                id: 7,
                title: "Test du JBL Boombox 4",
                image: "https://i.ibb.co/0yHzQcR5/81-BO5l-EQl-WL-AC-UF1000-1000-QL80.jpg",
                rating: 9,
                link: "https://conseildirect.fr/test-de-la-jbl-boombox-4"
            },
            {
                id: 6,
                title: "Test du Xgimi Horizon 20 Max",
                image: "https://i.ibb.co/hJGYKNWc/xgimi-horizon-20-max-face.jpg",
                rating: 9,
                link: "https://conseildirect.fr/test-du-xgimi-horizon-20-max"
            },
            {
                id: 5,
                title: "Test du Ricoh GR IV",
                image: "https://i.ibb.co/1YnJS0g4/foto-looman-ricoh-gr-iv-1-600x600.jpg",
                rating: 8,
                link: "https://conseildirect.fr/test-ricoh-gr-iv"
            },
            {
                id: 4,
                title: "Test du Logitech G321 LightSpeed",
                image: "https://i.ibb.co/KcF841kZ/g321-lightspeed-3qtr-front-left-angle-offwhite-gallery-1.png",
                rating: 7,
                link: "https://conseildirect.fr/test-logitech-g321-lightspeed"
            },
            {
                id: 3,
                title: "Test du Moustache lundi 20 Cargo 3",
                image: "https://i.ibb.co/KjbHRMCC/ey-Jw-YXRo-Ijoib-W91c3-Rh-Y2hl-LWJpa2-Vz-XC9ma-Wxl-XC9-Tc1ha-UERHTm1v-QXBKSm1-BUkd-Me-C5qc-Gcif-Q-mo.jpg",
                rating: 8,
                link: "https://conseildirect.fr/test-moustache-lundi-20-cargo-3"
            },
            {
                id: 2,
                title: "Test du OnePlus 15",
                image: "https://i.ibb.co/V0pdYk8K/One-Plus15-sand-1080x1080.png",
                rating: 9,
                link: "https://conseildirect.fr/test-oneplus-15"
            },
            {
                id: 1,
                title: "Test du Realme P3 5G",
                image: "https://i.ibb.co/6ckhJ2c4/71-WHTasf-K-L.jpg",
                rating: 7,
                link: "https://conseildirect.fr/test-realme-p3-5g"
            }
        ];

        const itemsPerPage = 20;
        let currentPage = 1;
        let filteredProducts = [...productsData];

        function renderProducts() {
            const startIndex = (currentPage - 1) * itemsPerPage;
            const endIndex = startIndex + itemsPerPage;
            const pageProducts = filteredProducts.slice(startIndex, endIndex);

            const grid = document.getElementById('productsGrid');
            
            if (pageProducts.length === 0) {
                grid.innerHTML = '<p style="color: white; text-align: center; width: 100%; padding: 2rem;">Aucun produit trouvé</p>';
                return;
            }
            
            grid.innerHTML = pageProducts.map(product => `
                <a href="${product.link}" class="product-card">
                    <div class="rating-badge">
                        <span class="rating-number">${product.rating}</span>
                        <span class="rating-total">/10</span>
                    </div>
                    <img src="${product.image}" alt="${product.title}" class="product-image">
                    <div class="product-content">
                        <h3 class="product-title">${product.title}</h3>
                    </div>
                </a>
            `).join('');
        }

        function renderPagination() {
            const totalPages = Math.ceil(filteredProducts.length / itemsPerPage);
            const pagination = document.getElementById('pagination');
            
            if (totalPages <= 1) {
                pagination.innerHTML = '';
                return;
            }
            
            let paginationHTML = `
                <button class="pagination-btn" onclick="changePage(${currentPage - 1})" ${currentPage === 1 ? 'disabled' : ''}>
                    ← Précédent
                </button>
            `;

            for (let i = 1; i <= totalPages; i++) {
                if (i === 1 || i === totalPages || (i >= currentPage - 1 && i <= currentPage + 1)) {
                    paginationHTML += `
                        <button class="pagination-btn ${i === currentPage ? 'active' : ''}" onclick="changePage(${i})">
                            ${i}
                        </button>
                    `;
                } else if (i === currentPage - 2 || i === currentPage + 2) {
                    paginationHTML += `<span class="pagination-dots">...</span>`;
                }
            }

            paginationHTML += `
                <button class="pagination-btn" onclick="changePage(${currentPage + 1})" ${currentPage === totalPages ? 'disabled' : ''}>
                    Suivant →
                </button>
            `;

            pagination.innerHTML = paginationHTML;
        }

        function changePage(page) {
            const totalPages = Math.ceil(filteredProducts.length / itemsPerPage);
            if (page < 1 || page > totalPages) return;
            
            currentPage = page;
            renderProducts();
            renderPagination();
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        // Fonction de recherche
        const searchInput = document.getElementById('searchInput');
        if (searchInput) {
            searchInput.addEventListener('input', (e) => {
                const searchTerm = e.target.value.toLowerCase();
                filteredProducts = productsData.filter(product => 
                    product.title.toLowerCase().includes(searchTerm)
                );
                currentPage = 1;
                renderProducts();
                renderPagination();
            });
        }

        // Initialisation
        document.addEventListener('DOMContentLoaded', function() {
            renderProducts();
            renderPagination();
        });

        // Initialisation immédiate aussi
        renderProducts();
        renderPagination();
    </script>
</body>
